{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}


        {% for product in products %}
            <div id="container">

            <div class="product-details">

                <h1>{{ product.ProductName }}</h1>
                <span class="hint-star star">
                    <i class="fa fa-star" aria-hidden="true"></i>
                    <i class="fa fa-star" aria-hidden="true"></i>
                    <i class="fa fa-star" aria-hidden="true"></i>
                    <i class="fa fa-star" aria-hidden="true"></i>
                    <i class="fa fa-star-o" aria-hidden="true"></i>
                </span>
                <p class="information">{{ product.ProductDescription }} </p>
                <div class="control">
                    <button class="btn">
                        <span class="price">{{ product.ProductPrice }}TND</span>
                        <span class="shopping-cart"><i class="fa fa-shopping-cart" aria-hidden="true"></i></span>
                        <span class="buy"> <a href="{{ path('app_product_show', {'id': product.id}) }}">Get now </a> </span>
                    </button>
                </div>

            </div>
            <div class="product-image">
                <img height="400" width="400"  src="{{app.request.basepath}}/uploads/{{product.image}}" alt="">
                <div class="info">
                    <h2> Description</h2>
                    <ul>
                        <li><strong>Date upload: </strong>{{ product.UpdateDate ? product.UpdateDate|date('Y-m-d') : '' }} </li>


                    </ul>
                </div>
            </div>
            </div>


        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}


{% endblock %}
