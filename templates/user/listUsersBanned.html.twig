{% extends 'base_BACK.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                
                <th>Username</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Email</th>
                <th>Fullname</th>
                <th>Naissance</th>
                <th>IsVerified</th>
                <th>IsBanned</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in UserByBanned %}
            <tr>
                
                <td>{{ user.username }}</td>
                <td>
                    {% if 'ROLE_ADMIN' in user.roles %}
                        {{"Administrateur"}}
                    {% elseif 'ROLE_COACH' in user.roles %}
                        {{"Coach"}}
                    {% elseif 'ROLE_MEDECIN' in user.roles %}
                        {{"Medecin"}}
                    {% elseif 'ROLE_NUTRITIONNISTE' in user.roles %}
                        {{"Nutritionniste"}}
                    {% elseif 'ROLE_KINESITHERAPEUTE' in user.roles %}
                        {{"Kin√©sitherapeute"}}
                    {% else %}
                        {{"Utilisateur"}}
                    {% endif %}
                </td>
                <td>{{ user.password ? '*********' }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.fullname }}</td>
                <td>{{ user.naissance ? user.naissance|date('Y-m-d') : '' }}</td>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                <td>{{ user.isBanned ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                    <a  href="{{ path('app_user_edit_roles', {'id': user.id}) }}" class="nk-btn nk-btn-rounded nk-btn-color-white" >
                            <span>Edit Role</span>
                            <span class="icon"><i class="ion-paper-airplane"></i></span>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
