{% extends 'baseAjax.html.twig' %}

{% block title %}Ajouter maladie{% endblock %}

{% block body %}
<div style="display: flex;align-items: center;justify-content: center;margin-top :150px">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Ajouter maladie :</h5>

              <!-- General Form Elements -->

                

              {{ form_start(form,{'attr':{'novalidate': 'novalidate'}}) }}
                <div class="row mb-3">
                  <label for="inputText" class="col-sm-7 col-form-label">Nom Maladie</label>
                  <div class="col-sm-10">
              {{ form_widget(form.NomMaladie,{'attr': {'class':'form-control'}}) }}
                 {{ form_errors(form.NomMaladie,{'attr': {'class':'text-danger'}}) }}

                  </div>
                </div>

              {{ form_start(form,{'attr':{'novalidate': 'novalidate'}}) }}
                <div class="row mb-3">
                  <label for="inputText" class="col-sm-7 col-form-label">Type Maladie</label>
                  <div class="col-sm-10">
              {{ form_widget(form.TypeMaladie,{'attr': {'class':'form-control'}}) }}
                 {{ form_errors(form.TypeMaladie,{'attr': {'class':'text-danger'}}) }}

                  </div>
                </div>

              {{ form_start(form,{'attr':{'novalidate': 'novalidate'}}) }}
                <div class="row mb-3">
                  <label for="inputText" class="col-sm-7 col-form-label">Symptomes</label>
                  <div class="col-sm-10">
              {{ form_widget(form.Symptoms,{'attr': {'class':'form-control'}}) }}
              {{ form_errors(form.Symptoms,{'attr': {'class':'text-danger'}}) }}


                  </div>
                </div>

                 
                  {{ form_start(form) }}

                  <div class="col-sm-10">
                {{ form_widget(form.Ajouter,{'attr': {'class':'<button type="button" class="btn btn-success rounded-pill">Success</button>'}}) }}
                  </div>
                </div> 


                                {{form_end(form) }}


                                {% endblock %}


              
