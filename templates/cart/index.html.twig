{% extends 'base.html.twig' %}


{% block body %}
<div class="container">
        <section class="bg-light p-3 mt-5">
            <h1>Votre panier</h1>
        </section>
        <table class="table">
            <thead  style="background-color:#1f5a94;">
            <tr>
                <th>Produit</th>
                <th>Prix</th>
                <th>Quantit√©</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for element in dataPanier %}
                <tr>
                    <td class="text-black-50">{{ element.produit.ProductName }}</td>
                    <td class="text-black-50">{{ element.produit.ProductPrice }} DT </td>
                    <td class="text-black-50">{{ element.quantite }}</td>
                    <td class="text-black-50">{{ element.quantite * element.produit.ProductPrice }} DT </td>
                    <td>
                        <a href="{{path("cart_add", {id: element.produit.id})}}"  class="btn-info"> + &nbsp;
                            <i class="bi bi-cart-plus"></i>
                        </a>
                        <a href="{{path("cart_remove", {id: element.produit.id})}}" class="btn-info"> - &nbsp;
                            <i class="bi bi-cart-dash"></i>
                        </a>
                        <a href="{{path("cart_delete", {id: element.produit.id})}}" class="btn-info"> effacer produit &nbsp;
                            <i class="bi bi-cart-x"></i>
                        </a>
                    </td>
                </tr>

            {% else %}
                <tr>
                    <td colspan="5" class="text-center">Votre panier est vide</td>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <td colspan="3">Total</td>
                <td class="text-black-50">{{ total }} DT </td>
                <td>
                    <a href="{{path("cart_delete_all")}}" class="btn-info"> vider panier &nbsp;
                        <i class="bi bi-cart-x"></i>
                    </a>
                </td>
            </tr>
            <tr>
                <a href="{{path("store")}}" class="btn-danger">Continuer votre achat &nbsp;
                    <i class="bi bi-cart-x"></i>
                </a>
            </tr>
            <tr>
                <a href="{{path("commande")}}" class="btn-info">Valider &nbsp;
                    <i class="bi bi-cart-x"></i>
                </a>
            </tr>
            </tfoot>

        </table>
</div>
{% endblock %}


